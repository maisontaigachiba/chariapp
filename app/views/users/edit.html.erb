<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= @user.errors.count %>個のエラーがあります。</h4>
      <p class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </p>
    </div>
  </div>
<% end %>


<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>編集</h2>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :username, "ユーザー名", class: "label" %>
          <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :profile, "プロフィール", class: "label" %>
          <%= f.text_field :profile, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像", class: "label" %>
          <%= f.attachment_field :profile_image, class: "form-control" %>
        </div>

        <div>
          <%= f.submit "更新する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>