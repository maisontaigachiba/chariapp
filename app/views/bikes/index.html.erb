<div class="container mt-5" style="background-color: #f99;">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">自転車の車種</th>
            <th scope="col">投稿者</th>
            <th scope="col"> </th>
          </tr>
        </thead>
        <tbody>
          <% @bikes.each do |bike| %>
            <tr>
              <td>
                <%= link_to bike_path(bike) do %>
                  <%= attachment_image_tag bike, :image, size: "500x500", class: "img-fluid" %><br>
                  <%= bike.title %><br>
                <% end %>
              </td>
              <td>
                <%= link_to user_path(bike.user) do %>
                  <%= attachment_image_tag bike.user, :profile_image, size: "100x100", fallback: "no-image.png", size: "100x100", class: "profile_image" %><br>
                  <%= bike.user.username %><br>
                <% end %>
              </td>
              <td>
                <% if current_user.already_favorited?(bike) %>
                  <%= link_to bike_favorites_path(bike), method: :delete do %>
                    <i class="fas fa-heart"></i>
                  <% end %>
                  <%= bike.favorites.count %>
                <% else %>
                  <%= link_to bike_favorites_path(bike), method: :post do %>
                    <i class="far fa-heart"></i>
                  <% end %>
                  <%= bike.favorites.count %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>
</div>