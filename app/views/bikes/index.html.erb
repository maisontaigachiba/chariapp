<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">自転車の車種</th>
            <th scope="col">投稿者</th>
            <th scope="col">更新日</th>
          </tr>
        </thead>
        <tbody>
          <% @bikes.each do |bike| %>
            <tr>
              <td>
                <%= link_to bike_path(bike) do %>
                  <%= attachment_image_tag bike, :image, size: "500x500" %><br>
                  <%= bike.title %>
                <% end %><br>
              </td>
              <td>
                <%= link_to user_path(bike.user) do %>
                  <%= attachment_image_tag bike.user, :profile_image, size: "100x100", fallback: "no-image.png", size: "100x100", class: "profile_image" %><br>
                  <%= bike.user.username %><br>
                <% end %>
              </td>
              <td>
                <time><%= bike.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>
</div>